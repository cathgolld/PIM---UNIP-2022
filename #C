#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>
typedef struct{
    char login[30];
    char senha[30];
} pessoa; pessoa p[1];
int main(){
setlocale(LC_ALL, "");
    char login[30];
    char senha[30];
    strcpy(p[0].login, "Pim.Invest");
    strcpy(p[0].senha, "unip2022");
    printf("\nLogin: ");
    scanf("%s", login);
    printf("\nSenha: ");
    scanf("%s", senha);
    if ((strcmp(login,p[0].login)==0) && (strcmp(senha,p[0].senha)==0)){
        printf("\nUsu√°rio logado");
    }else{
        printf("\nLogin e/ou senha incorretos");
    }
    return 0;
}

